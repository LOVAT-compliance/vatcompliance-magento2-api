<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Lovat_Api::permission" title="Lovat Api" sortOrder="100">
                    <resource id="Lovat_Api::orders" title="Lovat Api orders" sortOrder="101"/>
                </resource>
                <resource id="Lovat_Api::api" title="Lovat" sortOrder="51">
                    <resource id="Lovat_Api::settings" title="Lovat Settings" sortOrder="10"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Lovat_Api::api_config" title="Lovat Settings"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
